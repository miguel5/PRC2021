extends layout

block content

  header.w3-margin-left

    h1.w3-text-orange
      a(href="/")  Periodic Table 
      span.w3-text-orange - Periods

  if periods.length
    table.w3-table
      tr
        th ID
        th Number 

      each p in periods  
        tr 
          td
            a(href=`/periods/${p[0]}`)= p[0]
          td= p[1] 
        
  else 
    p.w3-margin-left No info.

    a(href="/").w3-margin-left Home Page