extends layout

block content

  header.w3-margin-left

    h1.w3-text-orange
      a(href="/")  Periodic Table 
      span.w3-text-red - Group #{id}
  
  if group
    ul
      if group[0].name
        li
          b Name: 
          span= group[0].name.value
      if group[0].number
        li
          b Number: 
          span= group[0].number.value
      li 
        b Elements: 
        ul
          each elem in group
            li
              a(href=`/elements/${elem.e.value.split('#')[1]}`)= elem.e.value.split('#')[1]

  else 
    p.w3-margin-left No info.

    a(href="/").w3-margin-left Home Page